<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>MyViewer page</title>
		<script type="text/javascript">
			let canvas, ctx;
			window.onload = function() {
				
				webSocket = new WebSocket('ws://localhost:8080/eeit82_web/mycenter');
				
				webSocket.onerror = function(event) {
					console.log("Error: " + event);
				}
				
				webSocket.onopen = function(event) {
					console.log("Open: " + event);
					console.log("Server Connection.");
				}
				
				webSocket.onmessage = function(event) {
					console.log(event);
					let data = event.data;
					console.log(data);
					if (data.to_event == "open") {
						
					} else if (data.to_event == "mousedown") {
						
					} else {
						
					}
				}

				webSocket.onclose = function(event) {
					console.log("Server Disconnection.");
				}
				
				canvas = document.getElementById('myViewer');
				ctx = canvas.getContext('2d');
				
				ctx.beginPath();
				ctx.lineWidth = 4;
				
				function moveTo(x, y) {
					ctx.moveTo(x, y);
				}
				
				function drawLine(x,y) {
					ctx.lineTo(x, y);
					ctx.stroke();
				}
				
			}
			
		</script>
	</head>
	<body>
		<canvas id="myViewer" width="640px" height="480px" style="border: 1px solid black">
		
		</canvas>
	</body>
</html>